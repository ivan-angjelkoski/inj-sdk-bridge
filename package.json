{
  "name": "inj-sdk",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "dev:relayer": "turbo --filter=@inj-sdk/cctp-relayer dev",
    "dev:bridge": "turbo --filter=bridge-nuxt dev",
    "dev:all": "turbo --filter=@inj-sdk/cctp-relayer dev --filter=bridge-nuxt dev"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
