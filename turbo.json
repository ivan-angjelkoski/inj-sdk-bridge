{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", ".output/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false,
      "env": [
        "PRIVATE_KEY",
        "ALCHEMY_API_KEY",
        "ALCHEMY_POLICY_ID",
        "POLICY_ID",
        "RELAYER_URL",
        "NUXT_PUBLIC_POLICY_ID",
        "NUXT_PUBLIC_ALCHEMY_API_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "PRIVATE_KEY",
        "ALCHEMY_API_KEY",
        "ALCHEMY_POLICY_ID",
        "POLICY_ID",
        "RELAYER_URL",
        "NUXT_PUBLIC_POLICY_ID",
        "NUXT_PUBLIC_ALCHEMY_API_KEY"
      ]
    }
  }
}
